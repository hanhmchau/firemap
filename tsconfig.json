{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { "*": ["types/*"] },
        "noImplicitAny": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "target": "es6"
    },
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "forceIsolatedModules": true,
        "reportFiles": [
            "src/**/*.{ts,tsx}"
        ]
    }
}